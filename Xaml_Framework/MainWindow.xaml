<Window x:Class="Xaml_Framework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Xaml_Framework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="CoolButton" Content="Cool Button" Click="CoolButton_Click" Margin="5" AllowDrop="True"/>
        <TextBox x:Name="ClickCounterTextBox" Grid.Row="1" Margin="5" IsReadOnly="True"/>
        <Button x:Name="ResetButton" Grid.Row="1" Content="Reset" Click="ResetButton_Click" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
